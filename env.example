# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Email Configuration
EMAIL_HOST=smtp.company.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=notifications@company.com
EMAIL_PASS=your_email_password
EMAIL_FROM=SecureTeam Tracker <notifications@company.com>

# Application Configuration
SESSION_SECRET=your_session_secret_key_here
NODE_ENV=development

# Active Directory Configuration (Optional)
LDAP_URL=ldap://your-domain-controller.company.com:389
LDAP_BIND_DN=CN=Service-Account,CN=Users,DC=company,DC=com
LDAP_BIND_PASSWORD=your_service_account_password
LDAP_SEARCH_BASE=CN=Users,DC=company,DC=com
LDAP_SEARCH_FILTER=(sAMAccountName={{username}})

# Enable AD authentication
AD_AUTH_ENABLED=false